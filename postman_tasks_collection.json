{
  "info": {
    "name": "Django Tasks API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "username",
      "value": "demo_user"
    },
    {
      "key": "email",
      "value": "demo@example.com"
    },
    {
      "key": "password",
      "value": "password123"
    },
    {
      "key": "new_password",
      "value": "newpassword123"
    },
    {
      "key": "task_id",
      "value": "1"
    },
    {
      "key": "uid",
      "value": ""
    },
    {
      "key": "verification_token",
      "value": ""
    },
    {
      "key": "reset_token",
      "value": ""
    },
    {
      "key": "auth_token",
      "value": ""
    },
    {
      "key": "jwt_access",
      "value": ""
    },
    {
      "key": "jwt_refresh",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/register/"
          }
        },
        {
          "name": "Verify Email Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/verify/request/"
          }
        },
        {
          "name": "Verify Email Confirm",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"uid\": \"{{uid}}\",\n  \"token\": \"{{verification_token}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/verify/confirm/"
          }
        },
        {
          "name": "JWT Create",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/jwt/create/"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const json = pm.response.json();",
                  "  if (json && json.access) {",
                  "    pm.collectionVariables.set('jwt_access', json.access);",
                  "  }",
                  "  if (json && json.refresh) {",
                  "    pm.collectionVariables.set('jwt_refresh', json.refresh);",
                  "  }",
                  "} catch (e) {}"
                ]
              }
            }
          ]
        },
        {
          "name": "JWT Refresh",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{jwt_refresh}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/jwt/refresh/"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const json = pm.response.json();",
                  "  if (json && json.access) {",
                  "    pm.collectionVariables.set('jwt_access', json.access);",
                  "  }",
                  "} catch (e) {}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/login/"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const json = pm.response.json();",
                  "  if (json && json.token) {",
                  "    pm.collectionVariables.set('auth_token', json.token);",
                  "  }",
                  "} catch (e) {}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login (Email)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/login/"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "try {",
                  "  const json = pm.response.json();",
                  "  if (json && json.token) {",
                  "    pm.collectionVariables.set('auth_token', json.token);",
                  "  }",
                  "} catch (e) {}"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}",
                "type": "text"
              }
            ],
            "url": "{{base_url}}/api/auth/logout/"
          }
        },
        {
          "name": "Password Reset Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/password-reset/request/"
          }
        },
        {
          "name": "Password Reset Confirm",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"uid\": \"{{uid}}\",\n  \"token\": \"{{reset_token}}\",\n  \"new_password\": \"{{new_password}}\"\n}"
            },
            "url": "{{base_url}}/api/auth/password-reset/confirm/"
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}",
                "type": "text"
              }
            ],
            "url": "{{base_url}}/api/tasks/"
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sample task\",\n  \"description\": \"Do the thing\",\n  \"is_completed\": false\n}"
            },
            "url": "{{base_url}}/api/tasks/"
          }
        },
        {
          "name": "Get Task By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}",
                "type": "text"
              }
            ],
            "url": "{{base_url}}/api/tasks/{{task_id}}/"
          }
        },
        {
          "name": "Update Task (PUT)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated task\",\n  \"description\": \"Updated description\",\n  \"is_completed\": true\n}"
            },
            "url": "{{base_url}}/api/tasks/{{task_id}}/"
          }
        },
        {
          "name": "Update Task (PATCH)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_completed\": true\n}"
            },
            "url": "{{base_url}}/api/tasks/{{task_id}}/"
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Token {{auth_token}}",
                "type": "text"
              }
            ],
            "url": "{{base_url}}/api/tasks/{{task_id}}/"
          }
        }
      ]
    },
    {
      "name": "Tasks (JWT)",
      "item": [
        {
          "name": "List Tasks (JWT)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_access}}",
                "type": "text"
              }
            ],
            "url": "{{base_url}}/api/tasks/"
          }
        },
        {
          "name": "Create Task (JWT)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_access}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sample task\",\n  \"description\": \"Do the thing\",\n  \"is_completed\": false\n}"
            },
            "url": "{{base_url}}/api/tasks/"
          }
        },
        {
          "name": "Get Task By ID (JWT)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_access}}",
                "type": "text"
              }
            ],
            "url": "{{base_url}}/api/tasks/{{task_id}}/"
          }
        },
        {
          "name": "Update Task (PUT) (JWT)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_access}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated task\",\n  \"description\": \"Updated description\",\n  \"is_completed\": true\n}"
            },
            "url": "{{base_url}}/api/tasks/{{task_id}}/"
          }
        },
        {
          "name": "Update Task (PATCH) (JWT)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_access}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_completed\": true\n}"
            },
            "url": "{{base_url}}/api/tasks/{{task_id}}/"
          }
        },
        {
          "name": "Delete Task (JWT)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_access}}",
                "type": "text"
              }
            ],
            "url": "{{base_url}}/api/tasks/{{task_id}}/"
          }
        }
      ]
    }
  ]
}
